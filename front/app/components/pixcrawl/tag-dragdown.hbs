<div class="tag-dragdown" {{on "mouseleave" (fn this.hideDragdown @index)}}>
    <ul class="list">
        {{#each this.tags as |tag|}}
        <Pixcrawl::DragdownItem @tag={{tag.tag}} @desc={{tag.desc}} @index={{@index}} @tags={{@tags}} />
        {{/each}}
    </ul>
</div>
<button type="button" class="tag-type" {{on "click" (fn this.showDragdown @index)}}>
    {{@tag}}</button >
